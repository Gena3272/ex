body
    padding 0
    margin 0
    background-color: #FFF5EE

.container
    max-width 1100px
    margin 0 auto
    width 90%
h2, h3
    font-family: 'Cormorant Garamond', serif
    font-family: 'EB Garamond', serif
h2
    font-size: 30px
a  
    text-decoration none
li
    list-style-type none
ul 
    list-style none 
img
    max-width 100%
.btn
    width 100px
    height: 40px
    background-color: #FFF5EE
    border 2px solid #D3D3D3
    border-radius 5px
    text-transform uppercase
    color #D3D3D3
    cursor pointer
    outline none
    transition all .5s
.btn:hover
    position relative
    left: 3px
    transition all .5s
    color #000000
    border 2px solid #000000
.hr
    width: 100%
    height: 1px
    background-color: #C0C0C0
    margin-top: 40px

