.road
  display grid
  grid-template-columns repeat(2, 1fr)
  &__img
    display inline-block
    overflow hidden
    & > img
      width: 100%
      height: 100%
      transition: 1s
      display: block

    & > img:hover
      transform: scale(1.2)

  &__text
    border-bottom 2px solid #D3D3D3
    padding 150px 70px 50px 50px
    & > h2
      font-size: 50px
      margin-bottom 30px
      font-weight 500
    & > p
      margin-bottom: 10px

.wrapper
  display grid
  grid-template-columns 1fr
  grid-template-rows repeat(2, 1fr)

  &__top
    display grid
    grid-template-columns 2fr 3fr
    grid-template-rows 400px
    border-bottom 2px solid #D3D3D3
    &__right
      padding 80px 100px 50px 50px
      & > p
        margin-bottom: 20px

      & > h3
        font-size 30px
        margin: 0

    &__left
      display inline-block
      overflow hidden
      & > img
        width: 100%
        height: 100%
        transition: 1s
        display: block

      & > img:hover
        transform: scale(1.2)

  &__bottom
    display grid
    grid-template-columns 3fr 2fr
    grid-template-rows 400px
    border-bottom 2px solid #D3D3D3







