.menu-none
  display none
  width: 30px
  height: 30px
.header
  display flex
  justify-content space-between
  border-bottom 2px solid #D3D3D3


  &__menu
    display: flex
    &__title
      text-transform uppercase
      font-size: 20px
      font-weight: bold
      list-style-type none
      letter-spacing 2px
      margin-left: 30px
      margin-top: 16px
  &__menu-list
    display flex
    justify-content center
    align-items center
    list-style-type none
    padding-left: 0


    &>li>a
      padding-top: 20px
      margin-left: 20px
      color black
      font-size 14px
      list-style none
      letter-spacing 2px
      transition .5s

    & > li:hover
      text-decoration underline

  &__links
    margin-top: 5px
    margin-right: 40px
    &-list
      display flex
      justify-content space-between
      align-items center

      &>li>a
        margin-left: 20px
        color silver
        transition .5s
        &:hover
          color black
          transition .5s











